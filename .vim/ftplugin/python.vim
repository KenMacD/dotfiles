setlocal tabstop=4
setlocal softtabstop=4
setlocal shiftwidth=4
setlocal textwidth=80
setlocal smarttab
setlocal expandtab

" See *fo-table*
" c - autowrap comments
" r - add # on enter
" o - add # on 'o'
" q - format comment qith gq
" l - don't break already long lines
" 1 - don't break after 1 word 
" j - on join remove '#'
setlocal formatoptions=croql1j
